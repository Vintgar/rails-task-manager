<%= link_to edit_path(@task), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this task
<% end %>

<h1><%= @task.title %></h1>

<p class="details"><%= @task.details %></p>
<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> Completed!
<% else %>
  <i class="fa fa-square-o"></i> Not completed yet
<% end %>

<hr>


<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
